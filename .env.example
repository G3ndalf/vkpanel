# VK IP Panel — переменные окружения

# Авторизация в панели
ADMIN_USER=admin
ADMIN_PASS=your_secure_password

# Секретный ключ для сессий (сгенерируйте случайный)
SECRET_KEY=your-random-secret-key-here

# Путь к файлу данных
DATA_FILE=/opt/vkpanel/data.json

# SSH настройки (для scan_servers.py)
SSH_USER=root
SSH_PASS=your_ssh_password

# Таймауты
SSH_TIMEOUT=10
SSH_COMMAND_TIMEOUT=30

# Параллельность
MAX_SSH_WORKERS=10
MAX_CLOUD_WORKERS=5
